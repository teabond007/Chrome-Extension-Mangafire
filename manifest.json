{
  "name": "Bookmarks Marker/Higlighter",
  "description": "for MangFire v2. It colors the border of saved Mangas. Doesn't work on MangaFire homepage yet",
  "version": "3.5.1",
  "manifest_version": 3,
  "options_ui": {
    "page": "./options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "./icons/favicon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "action": {
    "default_icon": "./icons/favicon128.png",
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://mangafire.to/user/bookmark",
    "https://graphql.anilist.co/*",
    "https://api.mangadex.org/*",
    "https://mangadex.org/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mangafire.to/*"
      ],
      "js": [
        "scripts/mangafire/content-mangafire.js"
      ]
    },
    {
      "matches": [
        "*://mangadex.org/*"
      ],
      "js": [
        "scripts/mangadex/content-mangadex.js"
      ]
    },
    {
      "matches": [
        "*://www.webtoons.com/*"
      ],
      "js": [
        "scripts/webtoons/content-webtoons.js"
      ]
    }
  ]
}
