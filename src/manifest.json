{
  "name": "Bookmarks Marker/Higlighter",
  "description": "for MangFire v2. It colors the border of saved Mangas. Doesn't work on MangaFire homepage yet",
  "version": "4.0.0",
  "manifest_version": 3,
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icons/favicon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "src/newtab/newtab.html"
  },
  "action": {
    "default_icon": "icons/favicon128.png",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "230078342235-anlc8rvjvbo5lg18tclldqpucfc0bja3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "https://mangafire.to/user/bookmark",
    "https://graphql.anilist.co/*",
    "https://api.mangadex.org/*",
    "https://mangadex.org/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mangafire.to/*",
        "*://mangadex.org/*",
        "*://asuracomic.net/*",
        "*://asurascans.com/*",
        "*://asuratoon.com/*",
        "*://www.webtoons.com/*",
        "*://manganato.com/*",
        "*://chapmanganato.com/*",
        "*://mangaplus.shueisha.co.jp/*"
      ],
      "js": [
        "src/scripts/content/main.ts"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "images/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}